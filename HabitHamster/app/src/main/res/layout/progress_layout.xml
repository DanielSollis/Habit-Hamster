<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/achievment_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:src="@drawable/ham_1"
        />

    <TextView
        android:id="@+id/progress_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/achievment_8"
        android:layout_below="@+id/achievment_7"
        android:text="LEVEL:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/achievment_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/achievment_1"
        app:srcCompat="@drawable/ham_2" />

    <ImageView
        android:id="@+id/achievment_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/achievment_2"
        app:srcCompat="@drawable/ham_3" />

    <ImageView
        android:id="@+id/achievment_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/achievment_1"
        app:srcCompat="@drawable/ham_4" />

    <ImageView
        android:id="@+id/achievment_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/achievment_2"
        android:layout_toEndOf="@+id/achievment_4"
        app:srcCompat="@drawable/ham_5" />

    <ImageView
        android:id="@+id/achievment_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/achievment_3"
        android:layout_toEndOf="@+id/achievment_2"
        app:srcCompat="@drawable/ham_6" />

    <ImageView
        android:id="@+id/achievment_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/achievment_4"
        app:srcCompat="@drawable/ham_7" />

    <ImageView
        android:id="@+id/achievment_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/achievment_4"
        android:layout_toEndOf="@+id/achievment_4"
        app:srcCompat="@drawable/ham_8" />

    <ImageView
        android:id="@+id/achievment_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/achievment_5"
        android:layout_toEndOf="@+id/achievment_5"
        app:srcCompat="@drawable/ham_9" />

</RelativeLayout>